<Window x:Class="Presentacion.WindowAdministradorReservasInformacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        Title="CleanPro - Información de la Reserva" Height="675" Width="500" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="Navy"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter Margin="{TemplateBinding Padding}" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#003399"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#E0E0E0"/>
                                <Setter Property="Foreground" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Navy"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter Margin="{TemplateBinding Padding}" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="FormField" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Padding" Value="2,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Información de la Reserva" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>
        <TextBlock Grid.Row="1" x:Name="tbReservaCreadaFecha" FontSize="12" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,0,15"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Tipo de servicio:" Style="{StaticResource FormLabel}"/>
            <ComboBox  Grid.Row="0" Grid.Column="1" x:Name="cbTipoServicio" Margin="10,8,0,8" IsEnabled="False"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Nombre del cliente:" Style="{StaticResource FormLabel}"/>
            <TextBox   Grid.Row="1" Grid.Column="1" x:Name="tbNombreCliente" Style="{StaticResource FormField}" Margin="10,8,0,8"/>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Dni del cliente:" Style="{StaticResource FormLabel}"/>
            <TextBox   Grid.Row="2" Grid.Column="1" x:Name="tbDniCliente" Style="{StaticResource FormField}" Margin="10,8,0,8"/>
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Número del cliente:" Style="{StaticResource FormLabel}"/>
            <TextBox   Grid.Row="3" Grid.Column="1" x:Name="tbNumeroCliente" Style="{StaticResource FormField}" Margin="10,8,0,8"/>
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Correo del cliente:" Style="{StaticResource FormLabel}"/>
            <TextBox   Grid.Row="4" Grid.Column="1" x:Name="tbCorreoCliente" Style="{StaticResource FormField}" Margin="10,8,0,8"/>
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Dirección:" Style="{StaticResource FormLabel}"/>
            <TextBox   Grid.Row="5" Grid.Column="1" x:Name="tbDireccion" Style="{StaticResource FormField}" Margin="10,8,170,8"/>
            <ComboBox  Grid.Row="5" Grid.Column="1" x:Name="cbDepartamento" Margin="160,8,0,8" IsEnabled="False" SelectionChanged="cbDepartamento_SelectionChanged">
                <ComboBoxItem Content="Amazonas"/>
                <ComboBoxItem Content="Áncash"/>
                <ComboBoxItem Content="Apurímac"/>
                <ComboBoxItem Content="Arequipa"/>
                <ComboBoxItem Content="Ayacucho"/>
                <ComboBoxItem Content="Cajamarca"/>
                <ComboBoxItem Content="Cusco"/>
                <ComboBoxItem Content="Huancavelica"/>
                <ComboBoxItem Content="Huánuco"/>
                <ComboBoxItem Content="Ica"/>
                <ComboBoxItem Content="Junín"/>
                <ComboBoxItem Content="La Libertad"/>
                <ComboBoxItem Content="Lambayeque"/>
                <ComboBoxItem Content="Lima"/>
                <ComboBoxItem Content="Loreto"/>
                <ComboBoxItem Content="Madre de Dios"/>
                <ComboBoxItem Content="Moquegua"/>
                <ComboBoxItem Content="Pasco"/>
                <ComboBoxItem Content="Piura"/>
                <ComboBoxItem Content="Puno"/>
                <ComboBoxItem Content="San Martín"/>
                <ComboBoxItem Content="Tacna"/>
                <ComboBoxItem Content="Tumbes"/>
                <ComboBoxItem Content="Ucayali"/>
            </ComboBox>
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Fecha programada:" Style="{StaticResource FormLabel}"/>
            <DatePicker Grid.Row="6" Grid.Column="1" x:Name="dpFechaProgramada" Margin="10,8,0,8" IsEnabled="False"/>
            <TextBlock Grid.Row="7" Grid.Column="0" Text="Cleaner:" Style="{StaticResource FormLabel}" Grid.ColumnSpan="2"/>
            <ComboBox  Grid.Row="7" Grid.Column="1" x:Name="cbCleaners" Margin="10,8,0,8" IsEnabled="False"/>
            <TextBlock Grid.Row="8" Grid.Column="0" Text="Observación:" Style="{StaticResource FormLabel}" Grid.ColumnSpan="2"/>
            <TextBox   Grid.Row="8" Grid.Column="1" x:Name="tbObservacion" Style="{StaticResource FormField}" Height="80" Margin="10,8,0,8" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
            <Button Content="Volver" Style="{StaticResource SecondaryButton}" Click="btnVolver"/>
            <Button x:Name="btn_Eliminar" Content="Eliminar" Style="{StaticResource DestructiveButton}" Margin="10,0,0,0" Click="btnEliminar" Width="70"/>
            <Button x:Name="btn_Editar" Content="Editar" Style="{StaticResource PrimaryButton}" Margin="10,0,0,0" Click="btnEditar" />
            <Button x:Name="btn_Guardar" Content="Guardar" Style="{StaticResource PrimaryButton}" Margin="10,0,0,0" Click="btnGuardar" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
