<Window x:Class="Presentacion.WindowCleanerPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        Title="CleanPro - Panel de Cleaner" 
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" Background="Transparent" Loaded="Window_Loaded">

    <Border BorderBrush="#DDD" BorderThickness="1" Background="#FAFAFA" CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="10,0,0,10">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1" Direction="0" Color="Black" Opacity="0.15" BlurRadius="10"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" >
                        <Image Source="logo.png" Width="60" Height="60" Margin="0,30,0,10"/>
                        <TextBlock Text="CLEANPRO" Foreground="#1C1C1E" FontSize="22" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,5"/>
                        <Separator Background="#EEE"/>
                        <TextBlock Text="Menú" Foreground="DarkGray" Margin="25,15,0,5" FontSize="12"/>

                        <RadioButton Style="{StaticResource NavigationRadioButtonStyle}" IsChecked="True" GroupName="Navigation" Click="btnDashboard">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE80F;" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                <TextBlock Text="Dashboard" Margin="15,5,0,5"/>
                            </StackPanel>
                        </RadioButton>
                        <RadioButton Style="{StaticResource NavigationRadioButtonStyle}" GroupName="Navigation" Click="btnHistorial">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE823;" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                <TextBlock Text="Historial" Margin="15,5,0,5"/>
                            </StackPanel>
                        </RadioButton>
                        <RadioButton Style="{StaticResource NavigationRadioButtonStyle}" GroupName="Navigation" Click="btnInformes">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE82D;" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                <TextBlock Text="Informes" Margin="15,5,0,5"/>
                            </StackPanel>
                        </RadioButton>
                        <RadioButton Style="{StaticResource NavigationRadioButtonStyle}" GroupName="Navigation" Click="btnInformacionPersonal">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE946;" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                <TextBlock Text="Información Personal" Margin="15,5,0,5"/>
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>

                    <Button Grid.Row="1" Style="{StaticResource ExitButtonStyle}" VerticalAlignment="Bottom" Click="btnSalir">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE7E8;" VerticalAlignment="Center"/>
                            <TextBlock Text="Salir" Margin="15,0,0,0"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                    <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE77B;" VerticalAlignment="Center" FontSize="16" Foreground="#555"/>
                    <TextBlock x:Name="tbCleanerNombre" Text="Cleaner" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#333" FontWeight="SemiBold"/>
                </StackPanel>
                <ContentControl x:Name="MainContentArea" Grid.Row="1" Margin="10"/>
                
            </Grid>
        </Grid>
    </Border>
</Window>