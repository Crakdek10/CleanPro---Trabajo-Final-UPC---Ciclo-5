<UserControl x:Class="Presentacion.UserControls.UCCleanerInformacionPersonal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentacion.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000" Background="White">
    
    <UserControl.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="Navy"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter Margin="{TemplateBinding Padding}" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#003399"/>
                            </Trigger>
                            
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#E0E0E0"/>
                                <Setter Property="Foreground" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FormLabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,20,0"/>
    </Style>
    <Style x:Key="FormField" TargetType="TextBox">
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="BorderBrush" Value="#CCC"/>
        <Setter Property="Padding" Value="2,5"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    </UserControl.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Información Personal" FontSize="24" FontWeight="Bold" Margin="0,0,0,30"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="40,0,40,0" VerticalAlignment="Top">
                <Border x:Name="imgFoto" Height="150" Width="150" BorderBrush="#DDD" BorderThickness="2" CornerRadius="12">
                    <Border.Background>
                        <ImageBrush x:Name="imgFotoCleaner" Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>
                <Button Content="Seleccionar Foto" Margin="0,10,0,0" Style="{StaticResource SecondaryButton}" Click="btnSeleccionarFoto"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="DNI de trabajador:" Style="{StaticResource FormLabel}"/>
                    <TextBox   Grid.Row="0" Grid.Column="1" x:Name="tbDNICleaner" Style="{StaticResource FormField}" Margin="0,10,0,10"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Nombre de trabajador:" Style="{StaticResource FormLabel}"/>
                    <TextBox   Grid.Row="1" Grid.Column="1" x:Name="tbNombreCleaner" Style="{StaticResource FormField}" Margin="0,10,0,10"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Número de celular:" Style="{StaticResource FormLabel}"/>
                    <TextBox   Grid.Row="2" Grid.Column="1" x:Name="tbNumeroCelCleaner" Style="{StaticResource FormField}" Margin="0,10,0,10"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Fecha de nacimiento:" Style="{StaticResource FormLabel}"/>
                    <DatePicker   Grid.Row="3" Grid.Column="1" x:Name="dpFechaNacimiento" Margin="0,10,0,10" IsEnabled="False"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Departamento:" Style="{StaticResource FormLabel}"/>
                    <ComboBox   Grid.Row="4" Grid.Column="1" x:Name="cbProvinciaCleaner" Margin="0,10,0,10" IsEnabled="False">
                        <ComboBoxItem Content="Amazonas"/>
                        <ComboBoxItem Content="Áncash"/>
                        <ComboBoxItem Content="Apurímac"/>
                        <ComboBoxItem Content="Arequipa"/>
                        <ComboBoxItem Content="Ayacucho"/>
                        <ComboBoxItem Content="Cajamarca"/>
                        <ComboBoxItem Content="Cusco"/>
                        <ComboBoxItem Content="Huancavelica"/>
                        <ComboBoxItem Content="Huánuco"/>
                        <ComboBoxItem Content="Ica"/>
                        <ComboBoxItem Content="Junín"/>
                        <ComboBoxItem Content="La Libertad"/>
                        <ComboBoxItem Content="Lambayeque"/>
                        <ComboBoxItem Content="Lima"/>
                        <ComboBoxItem Content="Loreto"/>
                        <ComboBoxItem Content="Madre de Dios"/>
                        <ComboBoxItem Content="Moquegua"/>
                        <ComboBoxItem Content="Pasco"/>
                        <ComboBoxItem Content="Piura"/>
                        <ComboBoxItem Content="Puno"/>
                        <ComboBoxItem Content="San Martín"/>
                        <ComboBoxItem Content="Tacna"/>
                        <ComboBoxItem Content="Tumbes"/>
                        <ComboBoxItem Content="Ucayali"/>
                    </ComboBox>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Sexo:" Style="{StaticResource FormLabel}"/>
                    <ComboBox   Grid.Row="5" Grid.Column="1" x:Name="cbSexoCleaner" Margin="0,10,0,10" IsEnabled="False">
                        <ComboBoxItem Content="Masculino"/>
                        <ComboBoxItem Content="Femenino"/>
                    </ComboBox>
                </Grid>

                <StackPanel Orientation="Horizontal" Margin="0,130,0,0" HorizontalAlignment="Right">
                    <Button x:Name="btn_Editar" Content="Editar" Style="{StaticResource PrimaryButton}" Click="btnEditar"/>
                    <Button x:Name="btn_Guardar" Content="Guardar" Style="{StaticResource PrimaryButton}" Margin="10,0,0,0" IsEnabled="False" Click="btnGuardar"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
