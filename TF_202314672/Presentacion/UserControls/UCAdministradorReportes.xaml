<UserControl x:Class="Presentacion.UserControls.UCAdministradorReportes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentacion.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000" Background="White" Loaded="UCAdministradorReportes_Loaded">

    <Grid Margin="20">
        <TabControl>
            <TabItem Header="General de Operaciones">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="10">

                        <Border Padding="10" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="Volumen de Reservas por Mes" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="Año:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <ComboBox x:Name="cbAñoReporte1" Width="100" SelectionChanged="SelectionChangedAño1">
                                        <ComboBoxItem Content="2025"/>
                                        <ComboBoxItem Content="2024"/>
                                        <ComboBoxItem Content="2023"/>
                                    </ComboBox>
                                </StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1.2*"/>
                                    </Grid.ColumnDefinitions>
                                    <DataGrid x:Name="dgReporte1" Grid.Column="0" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,10,0" BorderThickness="0" Background="Transparent">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Mes" Binding="{Binding MesNombre}" Width="*"/>
                                            <DataGridTextColumn Header="Completado" Binding="{Binding Completadas}" Width="*"/>
                                            <DataGridTextColumn Header="Cancelado" Binding="{Binding Canceladas}" Width="*"/>
                                            <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <ContentControl x:Name="graficoContainer1" Grid.Column="1"
                                                MaxWidth="400" MaxHeight="250" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Padding="10" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Margin="0,30,0,0">
                            <StackPanel>
                                <TextBlock Text="Distribución de Estados de Reservas" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="Año:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <ComboBox x:Name="cbAñoReporte2" Width="100" SelectionChanged="SelectionChangedAño2">
                                        <ComboBoxItem Content="2025"/>
                                        <ComboBoxItem Content="2024"/>
                                        <ComboBoxItem Content="2023"/>
                                    </ComboBox>
                                </StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1.2*"/>
                                    </Grid.ColumnDefinitions>
                                    <DataGrid x:Name="dgReporte2" Grid.Column="0" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,10,0" BorderThickness="0" Background="Transparent">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Estado" Binding="{Binding EstadoNombre}" Width="*"/>
                                            <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="*"/>
                                            <DataGridTextColumn Header="%" Binding="{Binding Porcentaje, StringFormat={}{0:P2}}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <ContentControl x:Name="graficoContainer2" Grid.Column="1"
                                                MaxWidth="400" MaxHeight="250" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Análisis de Servicios">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="10">

                        <Border Padding="10" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="Popularidad de Tipos de Servicio" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="Año:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <ComboBox x:Name="cbAñoReporte3" Width="100" SelectionChanged="SelectionChangedAño3">
                                        <ComboBoxItem Content="2025"/>
                                        <ComboBoxItem Content="2024"/>
                                        <ComboBoxItem Content="2023"/>
                                    </ComboBox>
                                </StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1.2*"/>
                                    </Grid.ColumnDefinitions>
                                    <DataGrid x:Name="dgReporte3" Grid.Column="0" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,10,0" BorderThickness="0" Background="Transparent">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Tipo de Servicio" Binding="{Binding TipoServicioNombre}" Width="*"/>
                                            <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="*"/>
                                            <DataGridTextColumn Header="%" Binding="{Binding Porcentaje, StringFormat={}{0:P2}}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <ContentControl x:Name="graficoContainer3" Grid.Column="1"
                                                MaxWidth="400" MaxHeight="250" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Padding="10" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Margin="0,30,0,0">
                            <StackPanel>
                                <TextBlock Text="TOP 10 Departamentos con más Reservas" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="Año:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <ComboBox x:Name="cbAñoReporte4" Width="100" SelectionChanged="SelectionChangedAño4">
                                        <ComboBoxItem Content="2025"/>
                                        <ComboBoxItem Content="2024"/>
                                        <ComboBoxItem Content="2023"/>
                                    </ComboBox>
                                </StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1.2*"/>
                                    </Grid.ColumnDefinitions>
                                    <DataGrid x:Name="dgReporte4" Grid.Column="0" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,10,0" BorderThickness="0" Background="Transparent">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Departamento" Binding="{Binding ProvinciaNombre}" Width="*"/>
                                            <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <ContentControl x:Name="graficoContainer4" Grid.Column="1"
                                                MaxWidth="400" MaxHeight="250" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <TabItem Header="Rendimiento de Cleaners">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="10">

                        <Border Padding="10" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="Ranking de Cleaners" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="Año:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <ComboBox x:Name="cbAñoReporte5" Width="100" SelectionChanged="SelectionChangedAño5">
                                        <ComboBoxItem Content="2025"/>
                                        <ComboBoxItem Content="2024"/>
                                        <ComboBoxItem Content="2023"/>
                                    </ComboBox>
                                </StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1.2*"/>
                                    </Grid.ColumnDefinitions>
                                    <DataGrid x:Name="dgReporte5" Grid.Column="0" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,10,0" BorderThickness="0" Background="Transparent">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Cleaners" Binding="{Binding CleanerNombre}" Width="*"/>
                                            <DataGridTextColumn Header="Reservas Completadas" Binding="{Binding ReservasCompletadas}" Width="*"/>
                                            <DataGridTextColumn Header="Promedio de tiempo" Binding="{Binding PromedioDuracionHoras}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <ContentControl x:Name="graficoContainer5" Grid.Column="1"
                                                MaxWidth="400" MaxHeight="250" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Padding="10" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Margin="0,30,0,0">
                            <StackPanel>
                                <TextBlock Text="Carga de trabajo por Cleaner" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="Año:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <ComboBox x:Name="cbAñoReporte6" Width="100" SelectionChanged="SelectionChangedAño6">
                                        <ComboBoxItem Content="2025"/>
                                        <ComboBoxItem Content="2024"/>
                                        <ComboBoxItem Content="2023"/>
                                    </ComboBox>
                                </StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1.2*"/>
                                    </Grid.ColumnDefinitions>
                                    <DataGrid x:Name="dgReporte6" Grid.Column="0" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,0,10,0" BorderThickness="0" Background="Transparent">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Cleaners" Binding="{Binding CleanerNombre}" Width="*"/>
                                            <DataGridTextColumn Header="Reservas asignadas" Binding="{Binding CantidadReservas}" Width="*"/>
                                            <DataGridTextColumn Header="%" Binding="{Binding Porcentaje, StringFormat={}{0:P2}}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <ContentControl x:Name="graficoContainer6" Grid.Column="1"
                                                MaxWidth="400" MaxHeight="250" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
