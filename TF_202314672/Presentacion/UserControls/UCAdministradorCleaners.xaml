<UserControl x:Class="Presentacion.UserControls.UCAdministradorCleaners"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentacion.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000" Background="White">

    <UserControl.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="Navy"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter Margin="{TemplateBinding Padding}" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#003399"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <SolidColorBrush x:Key="CardColor1" Color="#E3FDFD"/>
        <SolidColorBrush x:Key="CardColor2" Color="#CBF1F5"/>
        <SolidColorBrush x:Key="CardColor3" Color="#B2E4E8"/>
        <SolidColorBrush x:Key="CardColor4" Color="#A6E3E9"/>
        <SolidColorBrush x:Key="CardColor5" Color="#B2E4E8"/>
        <SolidColorBrush x:Key="CardColor6" Color="#CBF1F5"/>
    </UserControl.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Buscar:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
            <TextBox x:Name="tbSearch"  Width="200" Padding="5" TextChanged="txtChangedBuscarNombre"/>
            <TextBlock Text="Estado:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="20,0,10,0"/>
            <ComboBox x:Name="cbEstado" Width="150" SelectionChanged="SelectionChangedEstado">
                <ComboBoxItem Content="Todos" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Activo" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Inactivo" HorizontalAlignment="Left" Width="148.591304347826"/>
            </ComboBox>
            <TextBlock Text="Provincia:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="20,0,10,0"/>
            <ComboBox x:Name="cbProvincia" Width="150" SelectionChanged="SelectionChangedProvincia">
                <ComboBoxItem Content="Todos" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Amazonas" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Áncash" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Apurímac" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Arequipa" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Ayacucho" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Cajamarca" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Cusco" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Huancavelica" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Huánuco" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Ica" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Junín" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="La Libertad" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Lambayeque" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Lima" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Loreto" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Madre de Dios" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Moquegua" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Pasco" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Piura" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Puno" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="San Martín" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Tacna" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Tumbes" HorizontalAlignment="Left" Width="148.591304347826"/>
                <ComboBoxItem Content="Ucayali" HorizontalAlignment="Left" Width="148.591304347826"/>
            </ComboBox>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="20,0,20,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Nombre" FontWeight="Bold" Foreground="#555"/>
                <TextBlock Grid.Column="1" Text="Provincia" FontWeight="Bold" Foreground="#555"/>
                <TextBlock Grid.Column="2" Text="DNI" FontWeight="Bold" Foreground="#555"/>
                <TextBlock Grid.Column="3" Text="Estado" FontWeight="Bold" Foreground="#555" HorizontalAlignment="Center"/>
            </Grid>
            <Border Grid.Row="0" BorderBrush="#EEE" BorderThickness="0,0,0,2" VerticalAlignment="Bottom"/>

            <ListBox Grid.Row="1" x:Name="lsbCleaners" BorderThickness="0" Background="Transparent"
                 HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ItemContainerStyle="{StaticResource CardListBoxItemStyle}" AlternationCount="6" MouseDoubleClick="DoubleClickListBox">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="CardBorder" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                            CornerRadius="8" Margin="0,5">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1" Direction="270" Color="#EEE" BlurRadius="4" Opacity="0.5"/>
                            </Border.Effect>

                            <Grid MinHeight="45" Margin="20,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="220"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="{Binding CleanerNombre}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding CleanerProvincia}" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="{Binding CleanerDNI}" VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Ellipse Style="{StaticResource StatusEllipseStyle}"/>
                                    <TextBlock Text="{Binding CleanerEstado}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="0">
                                <Setter TargetName="CardBorder" Property="Background" Value="{StaticResource CardColor1}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="1">
                                <Setter TargetName="CardBorder" Property="Background" Value="{StaticResource CardColor2}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="2">
                                <Setter TargetName="CardBorder" Property="Background" Value="{StaticResource CardColor3}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="3">
                                <Setter TargetName="CardBorder" Property="Background" Value="{StaticResource CardColor4}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="4">
                                <Setter TargetName="CardBorder" Property="Background" Value="{StaticResource CardColor5}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding (ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="5">
                                <Setter TargetName="CardBorder" Property="Background" Value="{StaticResource CardColor6}"/>
                            </DataTrigger>
                            
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CardBorder" Property="BorderBrush" Value="Navy"/>
                            </Trigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>


        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Cantidad de cleaners activos:" Foreground="Gray"/>
                <TextBlock x:Name="tbContadorCleaners" Text="0" Foreground="Gray" FontWeight="SemiBold" Margin="5,0,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Agregar Cleaner" Style="{StaticResource PrimaryButton}" Click="btnAgregarCleaner"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
