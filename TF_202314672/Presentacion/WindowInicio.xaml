<Window x:Class="Presentacion.WindowInicio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        Title="CleanPro - Inicio" 
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        MinHeight="400" MinWidth="500" >

    <Window.Background>
        <ImageBrush ImageSource="background_blur_inicio.png" Stretch="UniformToFill" />
    </Window.Background>

    <Window.Resources>
        <Style TargetType="Border">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" Color="#CCCCCC" Opacity="0.5" BlurRadius="15"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>

        <Border Width="450" Height="350"
                Background="White"
                CornerRadius="20"
                Padding="25">

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="logo.png" Width="70" Height="70"/>
                <TextBlock Text="CLEANPRO" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5" />
                <TextBlock Text="&quot;Cuidamos tu ambiente como si fuera el nuestro&quot;" 
                           FontSize="11" Foreground="DarkGray" TextWrapping="Wrap" TextAlignment="Center"/>

                <TextBlock Text="Selecciona tu tipo de usuario para continuar" 
                           FontSize="14" HorizontalAlignment="Center" Margin="0,25,0,15"/>

                <Button Content="Administrador" Style="{StaticResource SecondaryButton}" Margin="0,5" Click="btnIngresarAdministrador"/>
                <Button Content="Cleaner" Style="{StaticResource SecondaryButton}" Margin="0,5" Click="btnIngresarCleaner"/>

                <Button Content="Salir" Style="{StaticResource DestructiveButton}" Margin="0,20,0,0" Width="100" Click="btnSalir"/>
            </StackPanel>

        </Border>

    </Grid>
</Window>