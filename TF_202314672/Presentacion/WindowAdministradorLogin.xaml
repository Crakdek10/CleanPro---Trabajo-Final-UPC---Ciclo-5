<Window x:Class="Presentacion.WindowAdministradorLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        Title="CleanPro - Iniciar Sesión" 
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        MinHeight="400" MinWidth="500">

    <Window.Background>
        <ImageBrush ImageSource="background_blur_inicio.png" Stretch="UniformToFill" />
    </Window.Background>

    <Window.Resources>
        <Style TargetType="Border">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" Color="#CCCCCC" Opacity="0.5" BlurRadius="15"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>

        <Border Width="450" Height="350"
                Background="White"
                CornerRadius="20"
                Padding="25">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0">
                    <Image Source="logo.png" Width="70" Height="70"/>
                    <TextBlock Text="CLEANPRO" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5" />
                    <TextBlock Text="&quot;Cuidamos tu ambiente como si fuera el nuestro&quot;" 
                               FontSize="11" Foreground="DarkGray" TextWrapping="Wrap" TextAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Iniciar sesión - Admin" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>

                    <TextBlock Text="Usuario" FontSize="12" Foreground="Black" Margin="0,0,0,5"/>
                    <TextBox x:Name="tbUsuario" Style="{StaticResource ModernTextBox}"/>

                    <TextBlock Text="Contraseña" FontSize="12" Foreground="Black" Margin="0,10,0,5"/>

                    <Grid>
                        <PasswordBox x:Name="tbPassword" Style="{StaticResource ModernPasswordBox}"/>

                        <TextBox x:Name="tbVisiblePassword" Style="{StaticResource ModernTextBox}" Visibility="Collapsed"/>

                        <Button x:Name="btnTogglePassword" 
                            Style="{StaticResource TogglePasswordButton}"
                            HorizontalAlignment="Right"
                            Click="TogglePassword_Click">

                            <TextBlock x:Name="iconPassword" 
                                FontFamily="Segoe Fluent Icons"
                                Text="&#xE890;" 
                                FontSize="14" 
                                VerticalAlignment="Center"/>
                        </Button>
                    </Grid>

                    <Grid Margin="0,20,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="6*"/>
                            <RowDefinition Height="11*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="Volver" Grid.Column="0" Height="30" Margin="0,0,5.174,0.261" Style="{StaticResource SecondaryButton}" Click="btnVolverLoginAdmin" Grid.RowSpan="2"/>
                        <Button Content="Acceder" Grid.Column="1" Margin="4.826,0,-0.487,0.261" Style="{StaticResource PrimaryButton}" Click="btnAccederLoginAdmin" Grid.RowSpan="2"/>
                    </Grid>
                </StackPanel>

            </Grid>
        </Border>

    </Grid>
</Window>
